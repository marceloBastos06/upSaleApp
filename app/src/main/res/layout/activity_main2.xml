<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/topo"
        android:layout_weight="2"
        android:id="@+id/topo" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6ac782"
        android:text="Home"
        android:layout_weight="1"
        android:id="@+id/home"
        android:layout_below="@+id/topo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.1"
        android:weightSum="3"
        android:layout_below="@+id/home">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/financas"
            android:layout_weight="1"
            android:id="@+id/financas"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grafico"
            android:layout_weight="1"
            android:id="@+id/grafico"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estoque"
            android:layout_weight="1"
            android:id="@+id/estoque"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />
    </LinearLayout>

</RelativeLayout>
